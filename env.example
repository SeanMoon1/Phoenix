# Database Configuration
DB_HOST=your_database_host
DB_PORT=3306
DB_USERNAME=your_database_username
DB_PASSWORD=your_secure_password_here
DB_DATABASE=phoenix

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
GOOGLE_CALLBACK_PATH=/auth/google/callback

# OAuth Redirect URLs
OAUTH_REDIRECT_BASE=https://your-domain.com
OAUTH_SUCCESS_REDIRECT=https://your-domain.com/auth/callback
OAUTH_FAILURE_REDIRECT=https://your-domain.com/login?error=oauth

# Additional OAuth Providers (Optional)
KAKAO_CLIENT_ID=your_kakao_client_id_here
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here
KAKAO_CALLBACK_URL=http://localhost:3000/auth/kakao/callback
KAKAO_CALLBACK_PATH=/auth/kakao/callback
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here
NAVER_CALLBACK_URL=http://localhost:3000/auth/naver/callback
NAVER_CALLBACK_PATH=/auth/naver/callback

# Application Configuration
NODE_ENV=production
PORT=3000
API_URL=https://api.your-domain.com
FRONTEND_URL=https://your-domain.com

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://your-domain.com

# Initial Admin Configuration (First deployment only)
INITIAL_ADMIN_LOGIN_ID=admin
INITIAL_ADMIN_PASSWORD=your_secure_admin_password_here
INITIAL_ADMIN_NAME=시스템 관리자
INITIAL_ADMIN_EMAIL=admin@your-domain.com
INITIAL_ADMIN_PHONE=010-0000-0000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/phoenix.crt
SSL_KEY_PATH=/etc/ssl/private/phoenix.key

# AWS SES Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=ap-northeast-2
AWS_SES_FROM_EMAIL=phoenix4team@gmail.com
AWS_SES_TO_EMAIL=phoenix4team@gmail.com

# Gmail API Configuration
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REDIRECT_URIS=http://localhost:3000/gmail/callback
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send