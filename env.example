# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=phoenix_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=phoenix

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
GOOGLE_CALLBACK_PATH=/auth/google/callback

# OAuth Redirect URLs
OAUTH_REDIRECT_BASE=http://localhost:3000
OAUTH_REDIRECT_BASE_DEV=http://localhost:3000
OAUTH_SUCCESS_REDIRECT=http://localhost:3000/auth/success
OAUTH_FAILURE_REDIRECT=http://localhost:3000/auth/failure

# Additional OAuth Providers (Optional)
KAKAO_CLIENT_ID=your_kakao_client_id_here
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here
KAKAO_CALLBACK_PATH=/auth/kakao/callback
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here
NAVER_CALLBACK_PATH=/auth/naver/callback

# Application Configuration
NODE_ENV=production
PORT=3000
API_URL=http://localhost:3000
API_PREFIX=api
FRONTEND_URL=http://localhost:80

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:80

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/phoenix.crt
SSL_KEY_PATH=/etc/ssl/private/phoenix.key
